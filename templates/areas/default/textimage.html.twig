{% set position = brick.position %}

{% set imageField = pimcore_image('image', {'height': 400}) %}
{% set textField = pimcore_wysiwyg('text') %}

{% extends 'content_layouts/default.html.twig' %}

{% block block_content %}
<div class="container-fluid">

    {% if editmode %}

        <div class="row d-flex {% if position == 'right' %} flex-column-reverse {% endif %}">
            <div class="col-6">
                Bild: {{ imageField | raw}}
            </div>
            <div class="col-6">
                Text: {{ textField | raw}} 
            </div>
        </div>

    {% else %}
        <div class="row d-flex {% if position == 'right' %} flex-column-reverse {% endif %}">

        {% if not imageField.isEmpty() %}
            <div class="col-6">
                <img src="{{ imageField.getThumbnail('textmedia') }}" alt="imageField.alt">
            </div>
        {% endif %}
        {% if not textField.isEmpty() %}
            <div class="col-6">
                {{ textField | raw}} 
            </div>
        {% endif %}
        
        </div>
    {% endif %}

</div>
{% endblock %}